    <include name="View_516_SlimList">
	
		<control type="group">
			<include>animation_view_change</include>
			<defaultcontrol always="true">516</defaultcontrol>
			<visible>Control.IsVisible(516)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
			<!-- Background Panel-->
			<control type="image">
				<right>52</right>
                <bottom>13%</bottom>
				<width>1180</width>
                <height>736</height>
				<texture border="15">diffuse/bgpanel.png</texture>
				<colordiffuse>$VAR[ViewDetailsPanelColor]</colordiffuse>
				<visible>!Skin.HasSetting(View516_HidePanel) + Skin.HasSetting(SlimListViewShowInfo)</visible>
                <visible>IntegerGreaterThan(Container.NumItems,0)</visible>
                <animation effect="slide" end="-637" time="0" condition="Skin.HasSetting(View516_ShowInfoRight) + Skin.HasSetting(SlimListViewShowInfo)">Conditional</animation>
			</control>
            <control type="image">
				<left>560</left>
                <bottom>13%</bottom>
				<width>1302</width>
                <height>736</height>
				<texture border="15">diffuse/bgpanel.png</texture>
				<colordiffuse>$VAR[ViewDetailsPanelColor]</colordiffuse>
				<visible>!Skin.HasSetting(View516_HidePanel) + !Skin.HasSetting(SlimListViewShowInfo)</visible>
                <visible>IntegerGreaterThan(Container.NumItems,0)</visible>
                <animation effect="slide" end="-627" time="0" condition="Skin.HasSetting(View516_ShowInfoRight) + Skin.HasSetting(SlimListViewShowInfo)">Conditional</animation>
			</control>
		
			<control type="panel" id="516">
                <animation effect="slide" end="-627" time="0" condition="Skin.HasSetting(View516_ShowInfoRight) + Skin.HasSetting(SlimListViewShowInfo)">Conditional</animation>
				<bottom>13%</bottom>
                <height>726</height>	
				<left>570</left>
				<width>1290</width>
				<onup>516</onup>
				<ondown>516</ondown>
				<onleft>9000</onleft>
				<onright>60</onright>
				<viewtype label="31450">list</viewtype>
				<orientation>vertical</orientation>
				<pagecontrol>60</pagecontrol>
				<scrolltime tween="cubic" easing="out">600</scrolltime>
				<preloaditems>2</preloaditems>
				<visible>StringCompare(Window(Home).Property(SkinHelper.ForcedView),516) | IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
				<itemlayout width="1280" height="60" condition="Skin.HasSetting(SlimListViewShowInfo)">
                    <control type="group">
                        <right>0</right>
                        <width>1160</width>
                        <include>SlimListLayout</include>
                    </control>
				</itemlayout>
				<focusedlayout width="1280" height="60" condition="Skin.HasSetting(SlimListViewShowInfo)">
					<control type="group">
                        <right>0</right>
                        <width>1160</width>
                        <include>SlimListLayoutFocus</include>
                    </control>
				</focusedlayout>
                         <itemlayout width="1280" height="60" condition="!Skin.HasSetting(SlimListViewShowInfo)">		
					<include>SlimListLayout</include>
				</itemlayout>
				<focusedlayout width="1280" height="60" condition="!Skin.HasSetting(SlimListViewShowInfo)">
					<include>SlimListLayoutFocus</include>
				</focusedlayout>

			</control>
			
		
			<!--large poster-->
			<control type="group">
				<visible>!Skin.HasSetting(SlimListViewShowInfo)</visible>
                <visible>IntegerGreaterThan(Container.NumItems,0)</visible>
                <left>50</left>
                <bottom>13%</bottom>
                <height>736</height>
                <width>500</width>
                <control type="image">
                    <include>PosterThumbBG</include>
                  </control>
				<control type="image">
					<aspectratio align="center" aligny="center" scalediffuse="true">stretch</aspectratio>
					<texture background="true" diffuse="diffuse/poster.png" fallback="DefaultVideo.png">$VAR[PosterThumb]</texture>
					<bordersize>8</bordersize>
                    <visible>!IsEmpty(ListItem.Art(poster)) | !IsEmpty(ListItem.Art(tvshow.poster))</visible>
				</control>
                <control type="image">
					<aspectratio align="center" aligny="bottom" scalediffuse="true">keep</aspectratio>
					<texture background="true" diffuse="diffuse/poster.png" fallback="DefaultVideo.png">$VAR[PosterThumb]</texture>
					<bordersize>8</bordersize>
                    <visible>IsEmpty(ListItem.Art(poster)) + IsEmpty(ListItem.Art(tvshow.poster))</visible>
				</control>
			</control>

			
			<!--vertical Scollbar-->
			<control type="scrollbar" id="60">
				<visible>Control.IsVisible(516)</visible>
				<right>15</right>
				<bottom>13%</bottom>
				<height>736</height>
				<onup>60</onup>
				<ondown>60</ondown>
				<onleft>516</onleft>
				<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)">Conditional</animation>
				<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)]">Conditional</animation>
			</control>
                 <include>MovieDetailsLeft</include>

		</control>
		
 	</include>

</includes>