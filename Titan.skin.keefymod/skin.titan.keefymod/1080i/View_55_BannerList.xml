<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
    <include name="View_55_BannerList">

        <!--View 55-->
        <control type="group">
            <visible>Control.IsVisible(55)</visible>
            <include>animation_view_change</include>
            <include>MovieDetailsLeft</include>
            <!-- ID="52" -->
            <control type="panel" id="55">
                <animation effect="slide" end="-645" time="250" condition="Skin.HasSetting(View55_ShowInfoRight)">Conditional</animation>
                <right>40</right>
				<bottom>13%</bottom>
                <height>738</height>
				<width>1190</width>
                <onup>55</onup>
                <ondown>55</ondown>
                <onleft>9000</onleft>
                <onright>60</onright>
                <pagecontrol>60</pagecontrol>
                <viewtype label="31424">bigwide</viewtype>
                <scrolltime tween="Cubic" easing="inout">500</scrolltime>
                <focusposition>0</focusposition>
                <orientation>vertical</orientation>
                <preloaditems>4</preloaditems>
				<visible>StringCompare(Window(Home).Property(SkinHelper.ForcedView),55) | IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
                <visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(musicvideos) | Container.Content(seasons) | Container.Content(sets) | Container.Content(artists) | SubString(Container.FolderPath,pvr://recordings)</visible>
				<animation effect="slide" start="0" end="-20" time="0" condition="skin.hastheme(classic)">Conditional</animation>
                <itemlayout height="123" width="590" condition="!Skin.HasSetting(View55_LargeBanners)">
                    <control type="group">
                        <width>585</width>
                        <height>119</height>
                        <control type="image">
                            <texture border="5">diffuse/banner.png</texture>
                            <colordiffuse>$VAR[ViewDetailsPanelColor]</colordiffuse>
                            <aspectratio scalediffuse="false" align="left">stretch</aspectratio>
                            <include condition="Skin.String(thumbsborder_unfocused, 0)">thumbborder_0</include>
                            <include condition="Skin.String(thumbsborder_unfocused, 2)">thumbborder_2</include>
                            <include condition="Skin.String(thumbsborder_unfocused, 4)">thumbborder_4</include>
                            <include condition="Skin.String(thumbsborder_unfocused, 6)">thumbborder_6</include>
                        </control>
                        <include>BannerPlexlayout</include>
					</control>
                </itemlayout>
                <focusedlayout height="123" width="590" condition="!Skin.HasSetting(View55_LargeBanners)">
                    <control type="group">
                        <width>585</width>
                        <height>119</height>
                        <control type="image">
                            <texture border="5">diffuse/banner.png</texture>
                            <colordiffuse>$VAR[ViewDetailsFocusColor]</colordiffuse>
                            <aspectratio scalediffuse="false" align="left">stretch</aspectratio>
                            <include condition="Skin.String(thumbsborder_focused, 2)">thumbborder_2</include>
                            <include condition="Skin.String(thumbsborder_focused, 4)">thumbborder_4</include>
                            <include condition="Skin.String(thumbsborder_focused, 6)">thumbborder_6</include>
                        </control>
                        <include>BannerPlexlayout</include>
					</control>
                </focusedlayout>
                         <itemlayout height="246" width="1190" condition="Skin.HasSetting(View55_LargeBanners)">
                    <control type="group">
                        <width>1190</width>
                        <height>238</height>
                        <control type="image">
                            <texture border="5">diffuse/banner.png</texture>
                            <colordiffuse>$VAR[ViewDetailsPanelColor]</colordiffuse>
                            <aspectratio scalediffuse="false" align="left">stretch</aspectratio>
                            <include condition="Skin.String(thumbsborder_unfocused, 0)">thumbborder_0</include>
                            <include condition="Skin.String(thumbsborder_unfocused, 2)">thumbborder_2</include>
                            <include condition="Skin.String(thumbsborder_unfocused, 4)">thumbborder_4</include>
                            <include condition="Skin.String(thumbsborder_unfocused, 6)">thumbborder_6</include>
                        </control>
                        <include>BannerPlexlayout</include>
					</control>
                </itemlayout>
                <focusedlayout height="246" width="1190" condition="Skin.HasSetting(View55_LargeBanners)">
                    <control type="group">
                        <width>1190</width>
                        <height>238</height>
                        <control type="image">
                            <texture border="5">diffuse/banner.png</texture>
                            <colordiffuse>$VAR[ViewDetailsFocusColor]</colordiffuse>
                            <aspectratio scalediffuse="false" align="left">stretch</aspectratio>
                            <include condition="Skin.String(thumbsborder_focused, 2)">thumbborder_2</include>
                            <include condition="Skin.String(thumbsborder_focused, 4)">thumbborder_4</include>
                            <include condition="Skin.String(thumbsborder_focused, 6)">thumbborder_6</include>
                        </control>
                        <include>BannerPlexlayout</include>
					</control>
                </focusedlayout>
     			</control>
 			<!--vertical Scollbar-->
			<control type="scrollbar" id="60">
				<visible>Control.IsVisible(55)</visible>
				<right>15</right>
				<bottom>13%</bottom>
                <height>736</height>
				<onup>60</onup>
				<ondown>60</ondown>
				<onleft>55</onleft>
				<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)">Conditional</animation>
				<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)]">Conditional</animation>
			</control>
    
		</control>
		
	
		
	</include>
</includes>